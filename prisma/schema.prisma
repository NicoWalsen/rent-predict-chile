generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Listing {
  id        Int      @id @default(autoincrement())
  comuna    String
  m2        Int
  precio    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([comuna, m2])
  @@map("Listing")
}

model ScrapeLog {
  id         Int      @id @default(autoincrement())
  startedAt  DateTime @default(now())
  created    Int
  updated    Int
  durationMs Int
}
