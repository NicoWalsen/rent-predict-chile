generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Listing {
  id          Int      @id @default(autoincrement())
  externalId  String   @unique
  source      Source
  publishedAt DateTime
  lat         Float
  lon         Float
  commune     String
  areaM2      Int
  bedrooms    Int
  bathrooms   Int
  rentCLP     Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  @@map("Listing")
  @@schema("public")
  @@allow("read", true)
  @@deny("write", true)
  @@allow("write", auth() != null)
}

enum Source {
  PORTALINMOBILIARIO
  YAPO
}
